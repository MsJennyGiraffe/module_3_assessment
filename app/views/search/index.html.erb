<div class="container">
  <h2><%= @stores.count %> Total Stores</h2>
  <h2><%= @stores_display.count %> Results</h2>

  <% @stores_display.each do |store| %>
  <div class="col-md-4">
    <div class="store">
      <h3>Name: <%= link_to store.name %></h3>
      <h5>City: <%= store.city %></h5>
      <h5>Distance: <%= store.distance %></h5>
      <h5>Phone Number: <%= store.phone %></h5>
      <h5>Store Type: <%= store.store_type %></h5>
    </div>
  </div>
  <% end %>
</div>
